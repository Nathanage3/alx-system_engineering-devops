#!/bin/bash

# Update package list
apt-get update

# Install nginx
apt-get install -y nginx

# Create a custom 404 HTML page
echo "<html><body><h1>404 Not Found</h1><p>Ceci n'est pas une page</p></body></html>" > /var/www/html/404.html

# Configure Nginx to use the custom 404 page
echo "server {
    listen 80;
    server_name localhost;

    location / {
        root /var/www/html;
        index index.html;
    }

    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
        internal;
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx (without using systemctl)
kill -s HUP $(cat /var/run/nginx.pid)

# Done
echo "Nginx configured with custom 404 page. You can test by causing a 404 error, e.g., 'curl localhost/nonexistent-page'."
