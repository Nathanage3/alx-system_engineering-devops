#!/usr/bin/env bash
# Function to display information about subdomains
dns_config() {
    local domain="$1"
    local subdomain="$2"

    # Use dig to query DNS information for the subdomain
    local dns_output=$(dig +short -t ANY "$subdomain.$domain")

    # Check if DNS output is empty
    if [ -z "$dns_output" ]; then
        echo "The subdomain $subdomain does not exist for $domain"
    else
        # Extract relevant information using awk
        local record_type=$(echo "$dns_output" | awk '/ANSWER SECTION/ {getline; print $4}')
        local destination=$(echo "$dns_output" | awk '/ANSWER SECTION/ {getline; print $1}')

        # Display the information
        echo "The subdomain $subdomain is a $record_type record and points to $destination"
    fi
}

# Check the number of arguments provided
if [ "$#" -eq 1 ]; then
    # If only domain is provided, display information for default subdomains
    for sub in www lb-01 web-01 web-02; do
        dns_config "$1" "$sub"
    done
elif [ "$#" -eq 2 ]; then
    # If both domain and subdomain are provided, display information for the specified subdomain
    dns_config "$1" "$2"
else
    # Display usage if the number of arguments is incorrect
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi
